include adan.io;
include adan.system;

program::int main() {
    print("Enter your name: ");

    claimedName::string = readln();
    
    user::string = get_current_user();

    equate::bool = (bool)(user == claimedName);

    if (equate) {
        println("Hello my beautiful " + user + "!");
    } else {
        println("Hello my beautiful " + claimedName + "; I thought you went by ${user}?");
    }
    
    return 0;
}